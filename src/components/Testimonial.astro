---
const { data } = Astro.props;

import LinkButton from "../components/LinkButton.astro";

function convertToEuropeanDate(datetimeString) {
  const dateObj = new Date(datetimeString);
  const day = dateObj.getDate().toString().padStart(2, "0");
  const month = (dateObj.getMonth() + 1).toString().padStart(2, "0");
  const year = dateObj.getFullYear().toString();
  const europeanDate = `${day}-${month}-${year}`;
  return europeanDate;
}
function getFirst(myString, length) {
  return myString.substring(0, length);
}
---

<article>
  <header>
    <h2>{data.title}</h2>
    <time datetime={convertToEuropeanDate(data.created_at)}>
      {convertToEuropeanDate(data.created_at)}
    </time>
  </header>

  <p>{getFirst(data.description, 20)}...</p>

  <div class="button-container">
    <LinkButton
      variant="link"
      size="medium"
      linkTo={"testimonials/" + data.id}
      text="LÃ¦s mere"
    />

    <style>
      article {
        background-color: #f5f5f5;
        border-radius: 20px;
        padding: 1rem;
        display: grid;
        grid-gap: 1rem;
        grid-template-rows: auto 1fr auto;
      }

      h2 {
        margin: 0;
        font-size: 1.5rem;
      }

      time {
        font-size: 0.6rem;
        color: #888;
      }

      p {
        margin: 0;
        line-height: 1.5;
        font-size: 1.2rem;
      }

      .button-container {
        display: flex;
        justify-content: flex-end;
      }

      Button {
        font-size: 1.2rem;
        padding: 0.5rem 1rem;
      }
    </style>
  </div>
</article>
